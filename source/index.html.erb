<!-- Your cards code -->
<div class="wrapper-grey">
  <div class="container">
  <h2 class="text-center">Your next trip</h2>
    <div class="row">
      <% data.flats.each do |owner, flat| %> <!-- fait référence au ficgier data/flats.yml -->
      <div class="col-xs-12 col-sm-4">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path flat.picture %>');">
          <div class="card-category"><%= flat.city %></div>
          <div class="card-description">
            <h2><%= flat.name %></h2>
            <p><%= flat.summary %></p>
          </div>
          <%= image_tag flat.owner_picture, class:"card-user avatar avatar-large"  %>
          <%= link_to "#", "flats/#{owner}.html", class: "card-link" %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>

